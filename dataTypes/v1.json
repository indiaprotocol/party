{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/dataTypes",
  "definitions": {
    "money": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "currency": {
          "default": "INR",
          "description": "ISO 4217 Currency code",
          "example": "INR",
          "title": "Currency",
          "type": "string"
        },
        "value": {
          "description": "Amount in 2 precision float",
          "example": 1000000000.01,
          "title": "Value",
          "type": "number",
          "multipleOf": 0.01 
        }
      },
      "required": [
        "currency",
        "value"
      ],
      "title": "Money"
    },
    "postalAddress": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "line1": {
          "type": "string"
        },
        "line2": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "pinCode": {
          "type": "integer"
        }
      },
      "required": [],
      "title": "Postal Address"
    },
    "geoCode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "longitude": {
          "default": null,
          "description": "longitude",
          "example": 18.20202,
          "title": "longitude",
          "type": "number"
        },
        "latitude": {
          "default": null,
          "description": "Latitude",
          "example": 19.20202,
          "title": "Latitude",
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lon"
      ],
      "title": "Geo Code"
    },
    "dateRange": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "description": "start Date of range",
          "example": "2017-01-01",
          "title": "start",
          "type": "date"
        },
        "end": {
          "description": "end Date of ranfe",
          "example": "2018-01-01",
          "title": "end",
          "type": "date"
        }
      },
      "title": "DateRange"
    },
    "nationality":{
      "type": "string",
      "title": "The ISO-3166 Alpha-2 code Country code of nationality",
      "additionalProperties": true,
      "description": "The schema for exchange of party data",
      "examples": [
        "IN"
      ]
    }
  }
}