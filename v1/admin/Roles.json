{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "Roles": {
      "type": "object",
      "title": "The roles schema",
      "required": [
        "meta",
        "data"
      ],
      "properties": {
        "meta": {
          "type": "object",
          "required": [
            "page",
            "per_page",
            "total_records",
            "organization_id",
            "sort"
          ],
          "optionals": [
            "q"
          ],
          "properties": {
            "page": {
              "type": "integer"
            },
            "per_page": {
              "type": "integer"
            },
            "total_records": {
              "type": "integer"
            },
            "organization_id": {
              "type": "string"
            },
            "q":{
              "type": "string"
            },
            "sort": {
              "type": "object",
              "properties": {
                "by": {
                  "type": "string"
                },
                "in": {
                  "type": "string"
                }
              }
            }
          }
        },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "role_id",
              "name",
              "organization",
              "created_at",
              "updated_at",
              "user_count",
              "policies"
            ],
            "properties": {
              "role_id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "organization": {
                "type": "object",
                "required": [
                  "organization_id",
                  "name",
                  "display_name"
                ],
                "properties": {
                  "organization_id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "display_name": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              },
              "created_at": {
                "type": "string"
              },
              "updated_at": {
                "type": "string"
              },
              "user_count": {
                "type": "integer"
              },
              "policies": {
                "type": "array",
                "additionalItems": true,
                "items": {
                  "type": "object",
                  "required": [
                    "policy_id",
                    "name"
                  ],
                  "properties": {
                    "policy_id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}