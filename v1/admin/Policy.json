{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "Policy": {
      "type": "object",
      "required": [
        "meta",
        "data"
      ],
      "properties": {
        "meta": {
          "type": "object",
          "required": [
            "policy_id",
            "organization_id"
          ],
          "properties": {
            "policy_id": {
              "type": "string"
            },
            "organization_id": {
              "type": "string",
              "title": "The organization_id",
              "description": "organization_id"
            }
          }
        },
        "data": {
          "type": "object",
          "required": [
            "policy_id",
            "name",
            "roles",
            "permissions",
            "created_at",
            "updated_at"
          ],
          "properties": {
            "policy_id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "role_id",
                  "name"
                ],
                "properties": {
                  "role_id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            },  
            "permissions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "permission_id",
                  "subject_class",
                  "action",
                  "application"
                ],
                "properties": {
                  "permission_id": {
                    "type": "string"
                  },
                  "subject_class": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string"
                  },
                  "application": {
                    "type": "string"
                  }
                }
              }
            },
            "created_at": {
              "type": "string"
            },
            "updated_at": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}