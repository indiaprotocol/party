{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.indiaprotocol.com/v1/party/PartyAddress.json",
  "$ref": "#/definitions/Address",
  "definitions": {
    "Address": {
      "type": "object",
      "title": "The Address schema",
      "required": [
        "ref",
        "type",
        "sources"
      ],
      "additionalProperties": true,
      "description": "The schema for exchange of Addresss data",
      "properties": {
        "ref": {
          "description": "Address String",
          "example": "#1, 28th 'B' Cross Road, 4th Block Jayanagar, Bangalore Bangalore KA 560011 IN",
          "title": "Address",
          "type": "string"
        },
        "type":{
          "description": "type of Address",
          "example": "postal_address",
          "title": "Type",
          "type":"string"
        }
      }
    }
  }
}