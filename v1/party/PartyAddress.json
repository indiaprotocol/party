{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/Address",
  "definitions": {
    "Address": {
      "type": "object",
      "title": "The Address schema",
      "required": [
        "party_id",
        "address_id",
        "ref",
        "type",
        "sources"
      ],
      "additionalProperties": true,
      "description": "The schema for exchange of Addresss data",
      "properties": {
        "address_id": {
          "description": "Object ID of Address",
          "title": "Object ID",
          "type": "string"
        },
        "party_id": {
          "description": "Unique IDentifier of Party",
          "title": "Unique IDentifier",
          "type": "string"
        },
        "ref": {
          "description": "Address String",
          "title": "Address",
          "type": "string"
        },
        "type":{
          "description": "type of Address",
          "title": "Type",
          "type":"string"
        },
        "sources": {
          "type": "array",
          "title": "Data sources",
          "description": "The sources reference of the data",
          "items": {
            "type": "object",
            "properties": {
              "ref": {
                "description": "source reference from sources dictionary",
                "type": "string"
              },
              "timestamp": {
                "type": "string",
                "format": "dateTime",
                "description": "timestamp of the last refresh of data from source"
              }
            },
            "additionalProperties": false
          },
          "additionalItems": true
        }
      }
    }
  }
}