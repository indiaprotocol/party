{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The Party Private Profile schema",
  "description": "Party Profile object containing curated data about party from multiple sources accessible to all logged in users ",
  "required": [
    "meta",
    "data"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "title": "The meta schema",
      "description": "Meta of the Party Profile",
      "required": [
        "ref",
        "party_id",
        "type",
        "updated_at",
        "description"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "title": "The ref schema",
          "description": "unique idenrifiable slug",
          "example":"crediwatch-information-analytics-private-limited",
        },
        "party_id": {
          "type": "string",
          "title": "The Party ID schema",
          "description": "the UID of the Party",
        },
        "type": {
          "description": "Type of Party",
          "example":"private_company",
          "title": "Type of Party",
          "type": "string"
        },
        "updated_at": {
          "description": "Last updated time of the record",
          "example": "2020-08-12T13:50:44.113+05:30",
          "title": "Last updated time of the record",
          "type": "string"
        },
        "description": {
          "description": "Description of the Party",
          "example": "CREDIWATCH INFORMATION ANALYTICS PRIVATELIMITED, is a four year old Private Company started in September of 2016. It is registered with the RoC-Bangalore. There are currently 5 directors on the board - SANDEEP ANANDAMPILLAI RAMANUJAPURAM, MEGHNA SURYAKUMAR, VIJAYKUMAR MAHABIRPRASAD JATIA, GANAPATHY RAMAKRISHNA GOLIKERE, STUART LEONARDO PETERSON",
          "title": "Description of the party",
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "data": {
      "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/Party.json",
      "registrations":{
        "permanent_account_number":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRegistrations.json"
        },
        "corporate_identification_number":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRegistrations.json"
        },
        "gstn":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRegistrations.json"
        },
        "employee_provident_fund":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRegistrations.json",
          "information": {
              "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyInformation.json"
          }
        },
        "charge":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRegistrations.json"
        }
      },
      "documents":{"type": "array",
        "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyDocuments.json"
      },
      "addresses": {
        "registered_address":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyAddresses.json",
        },
        "website":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyAddresses.json",
        }
      },
      "relationships":{
        "signatories":{
          "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/v1/party/PartyRelationship.json"
        }
      }
    }
  }
}