{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/Party",
  "definitions": {
    "Party": {
      "type": "object",
      "title": "The Party schema",
      "required": [
        "party_id",
        "ref",
        "type",
        "status",
        "created",
        "name",
        "nationality",
        "sources"
      ],
      "additionalProperties": true,
      "description": "The schema for exchange of party data",
      "properties": {
        "party_id": {
          "description": "Unique IDentifier of Party",
          "example": "555e9a5d6d6f6f2eb29c3402",
          "title": "Unique IDentifier",
          "type": "string"
        },
        "ref": {
          "type": "string",
          "title": "Unique ref",
          "description": "unique ref for Party",
          "example": "crediwatch-information-analytics-private-limited"
        },
        "type": {
          "description": "Type of entity as defined in Party dictionary - ",
          "example": "private_company",
          "title": "Type of Party",
          "type": "string"
        },
        "status": {
          "description": "The status of the Party",
          "example": "active",
          "title": "The status of the Party",
          "type": "string"
        },
        "created": {
          "description": "Party created date - (DOB, date of incorproration)",
          "example": "2012-11-23",
          "title": "Party created date",
          "type": "string",
          "format": "date"
        },
        "name": {
          "description": "The name of the Party",
          "example": "CREDIWATCH INFORMATION ANALYTICS PRIVATE LIMITED",
          "title": "The name of the Party",
          "type": "string"
        },
        "nationality": {
          "type": "string",
          "title": "The ISO-3166 Alpha-2 code Country code of nationality",
          "additionalProperties": true,
          "description": "The schema for exchange of party data",
          "example": "IN"
        },
        "sources":{
          "type": "array",
          "title": "The List of sources for the data",
          "items": {
            "$ref": "https://raw.githubusercontent.com/indiaprotocol/protocol/development/dataTypes/v1.json#definitions/source"
          },
          "description": "The sources of the data",
          "example": "IN"

        },
        "authorized_capital": {
          "description": "Authorized capital",
          "title": "Authorized capital",
          "$ref": "https://bitbucket.org/crediwatch/indiaprotocol/raw/edcfe67b6cb1aeacf2c4ba9f19ac449cf303ad3f/protocol/dataTypes/v1.json#definitions/money"
        },
        "paid_up_capital": {
          "description": "Paid up capital",
          "title": "Paid up capital",
          "$ref": "https://bitbucket.org/crediwatch/indiaprotocol/raw/edcfe67b6cb1aeacf2c4ba9f19ac449cf303ad3f/protocol/dataTypes/v1.json#definitions/money"
        }
      }
    }
  }
}