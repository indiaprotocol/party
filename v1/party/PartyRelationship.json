{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/Relationship",
  "definitions": {
    "Identity": {
      "type": "object",
      "title": "The Relationship schema",
      "required": [
        "relationship_id",
        "party_id",
        "party_ref",
        "target_id",
        "target_ref",
        "type",
        "name",
        "status",
        "created",
        "terminated",
        "sources"
      ],
      "additionalProperties": true,
      "description": "The schema for exchange of Relationship data for a Party",
      "properties": {
        "relationship_id": {
          "description": "Object ID of Relationship",
          "title": "Object ID",
          "type": "string"
        },
        "party_id": {
          "description": "Unique IDentifier of Party",
          "title": "Unique IDentifier",
          "type": "string"
        },
        "party_ref": {
          "description": "Unique Handle of Party",
          "title": "Unique Handle",
          "type": "string"
        },
        "target_id": {
          "description": "party_id of target Party",
          "title": "Object ID",
          "type": "string"
        },
        "target_ref": {
          "description": "party_ref of target Party",
          "title": "Handle",
          "type": "string"
        },
        "type":{
          "description": "type of Relationship",
          "title": "Type",
          "type":"string"
        },
        "status": {
          "description": "The status of the Relationship",
          "title": "The status of the Relationship",
          "type": "string"
        },
        "created": {
          "description": "Relationship created date - (Appointed)",
          "title": "Relationship created date",
          "type": "string",
          "format": "date"
        },
        "terminated":{
          "description": "Relationship terminated date - (Resigned)",
          "title": "Relationship terminated date",
          "type": "string",
          "format": "date"
        },
        "name": {
          "description": "Name of Relationship",
          "title": "Name",
          "type": "string"
        },
        "sources": {
          "type": "array",
          "title": "Data sources",
          "description": "The sources reference of the data",
          "items": {
            "type": "object",
            "properties": {
              "ref": {
                "description": "source reference from sources dictionary",
                "type": "string"
              },
              "timestamp": {
                "type": "string",
                "format": "dateTime",
                "description": "timestamp of the last refresh of data from source"
              }
            },
            "additionalProperties": false
          },
          "additionalItems": true
        }
      }
    }
  }
}