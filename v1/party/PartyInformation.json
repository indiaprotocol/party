{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/Information",
  "definitions": {
    "Information": {
      "type": "object",
      "title": "The Information schema",
      "required": [
        "meta",
        "data"
      ],
      "additionalProperties": false,
      "description": "The schema for exchange of Information data for a party",
      "properties": {
        "meta": {
          "description": "Meta of Information",
          "title": "meta",
          "type": "object",
          "additionalProperties": true,
          "required": [
            "party_id",
            "type",
            "information_id"
          ],
          "properties": {
            "type": {
              "type": "string",
              "description": "type of Information"
            },
            "party_id": {
              "type": "string",
              "description": "party of Information"
            },
            "information_id": {
              "type": "string",
              "description": "id of information"
            }
          }
        },
        "data": {
          "type": "object",
          "title": "The Information schema",
          "required": [
            "information_id",
            "party_id",
            "ref",
            "type",
            "created",
            "sources"
          ],
          "additionalProperties": true,
          "description": "The schema for exchange of Information data for a Party",
          "properties": {
            "information_id": {
              "description": "Object ID of Information",
              "title": "Object ID",
              "type": "string"
            },
            "party_id": {
              "description": "Unique IDentifier of Party",
              "title": "Unique IDentifier",
              "type": "string"
            },
            "ref": {
              "description": "reference Information for Party",
              "title": "Information",
              "type": "string"
            },
            "type": {
              "description": "type of Information",
              "title": "Type",
              "type": "string"
            },
            "created": {
              "description": "Information created date",
              "title": "Information created date",
              "type": "string",
              "format": "date",
              "example" : "2016-09-27"
            },
            "sources": {
              "type": "array",
              "title": "Data sources",
              "description": "The sources reference of the data",
              "items": {
                "type": "object",
                "properties": {
                  "ref": {
                    "description": "source reference from sources dictionary",
                    "type": "string"
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "dateTime",
                    "description": "timestamp of the last refresh of data from source",
                    "example" : "2020-08-06T16:08:42.453+00:00"
                  }
                },
                "additionalProperties": false
              },
              "additionalItems": true
            }
          }
        }
      }
    }
  }
}